<%= form_with model: [:dashboard, article], class: "space-y-8" do |f| %>
  <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
    <div class="space-y-6 sm:space-y-5">
      <div>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Article informations</p>
      </div>

      <div class="space-y-6 sm:space-y-5">
        <div
          class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5"
        >
          <%= f.label :title, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" do %>
            Title
          <% end %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <div class="flex max-w-lg rounded-md shadow-sm">
              <%=
                f.text_field :title,
                             class:
                               'block w-full min-w-0 flex-1 rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'
              %>
            </div>
          </div>
        </div>

        <div
          class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5"
        >
          <%= f.label :content, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" do %>
            Content
          <% end %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <%=
              f.rich_text_area :content,
                          class:
                            'block w-full max-w-lg rounded-md bg-white border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'
            %>
          </div>
        </div>

        <div
          class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5"
        >
          <%= f.label :scheduled_published_at, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" do %>
            Scheduled publishing date
          <% end %>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <div class="flex max-w-lg rounded-md shadow-sm">
              <%=
                f.datetime_field :scheduled_published_at,
                             class:
                               'block w-full min-w-0 flex-1 rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'
              %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="pt-5 border-t border-t-gray-200">
    <div class="flex justify-end">
      <%= link_to "Back", dashboard_articles_path, class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <button
        type="submit"
        class="ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
      >
        Submit
      </button>
    </div>
  </div>
<% end %>
